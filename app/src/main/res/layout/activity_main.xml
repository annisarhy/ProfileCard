<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFF"
    tools:context=".MainActivity" >
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bgheader"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_alignParentLeft="true"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/userpic"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="36dp"
            android:layout_toRightOf="@+id/imageView1"
            android:fontFamily="@font/mm"
            android:text="Rakesh Kumar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-30dp"
            android:layout_toRightOf="@+id/imageView1"
            android:fontFamily="@font/ml"
            android:text="USD Wallet"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="181dp"
        android:layout_below="@id/relative1"
        android:layout_centerInParent="true"
        android:layout_marginTop="-80dp"
        android:orientation="vertical"
        android:background="@drawable/bgmenus">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            android:text="Main Menus"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#818181" />
        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/iclist"/>
                <TextView
                    android:fontFamily="@font/mr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textColor="#172646"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icnet"/>
                <TextView
                    android:fontFamily="@font/mr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network"
                    android:textColor="#172646"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icplug"/>
                <TextView
                    android:fontFamily="@font/mr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plugins"
                    android:textColor="#172646"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icapps"/>
                <TextView
                    android:fontFamily="@font/mr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apps"
                    android:textColor="#172646"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/icguide"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_below="@+id/linear1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/icguide" />
    <TextView
        android:layout_below="@id/icguide"
        android:layout_centerInParent="true"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mm"
        android:textSize="22sp"
        android:layout_marginTop="12dp"
        android:text="Need Guide?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#172646" />
    <TextView
        android:layout_below="@id/textView4"
        android:layout_centerInParent="true"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mm"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:text="We will give directions \nto the new user"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#a1a1a1" />

    <Button
        android:fontFamily="@font/mm"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgbtnguide"
        android:text="Guide Me"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="12dp" />
</RelativeLayout>